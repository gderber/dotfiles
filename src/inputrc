#
# dotphiles : https://github.com/dotphiles/dotiles
#
# Make python shell usable
#
# Authors:
#   Ben O'Hara <bohara@gmail.com>
#

$include /etc/inputrc

# Set things up for python shell
set editing-mode vi

# Adds punctuation as word delimiters
set bind-tty-special-chars off

# Completion Options
# Allow up/down autocompletion of commands from bash history.
# From: coderwall.com/p/oqtj8w
"\e[A": history-search-backward
"\e[B": history-search-forward
set show-all-if-ambiguous on
set completion-ignore-case on
set page-completions on
set completion-query-items 200
set show-all-if-unmodified on
set visible-stats on

# Useful stuff for UTF-8
set meta-flag on
set input-meta on
set output-meta on
set convert-meta off

$if Bash
$endif

$if Python
    TAB: complete
$endif

# IPython needs this to appear at the bottom of the
# file for clear-screen to work
set keymap vi

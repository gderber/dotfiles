## NOTE: not using ',' as I want to be able to:
# $(sudo aptitude install $MISSING_PROGRAMS)

MISSING_CLI=""
MISSING_GUI=""

### CLI ### {{{
CLI_LIST=(docker pinfo qmv vim w3m mutt mpv tmux ncdu pass stow notmuch msmtp offlineimap urlview htop mosh sshuttle fusermount exfatfsck qemu-io pianobar cacaview conky encfs scanmem hexcurse lsof pidof pinentry-curses pinentry-tty ranger rfkill sshfs tree unar wget iotop parted caff wicd-curses rsync weechat diff file find gpg gpg2 mc lnav cheat dfc lemonbar newsbeuter task redshift xdotool git clamscan iftop wireshark aptitude hwmon bc entr gpm tlp sfill vit curl lshw parallel)

for i in "${CLI_LIST[@]}"; do
	if [[ ! $(command -v ${i}) ]]; then
		MISSING_CLI+="${i} "
	fi
done
### End CLI ### }}}

### GUI ### {{{
GUI_LIST=(rofi mcomix zathura xombrero terminator feh scrot calibre stalonetray i3lock xclip xnest xpra xbacklight spacefm spectrwm libreoffice clipit chromium icedove cryptkeeper gparted xss-lock nvpy uzbl urxvt zeal i3 font-manager gimp baobab gvim nitrogen touchegg unclutter autorandr srandr graphviz compton)

for i in "${GUI_LIST[@]}"; do
	if [[ ! $(command -v ${i}) ]]; then
		MISSING_GUI+="${i} "
	fi
done
### End GUI ### }}}

